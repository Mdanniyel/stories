---
// src/layouts/Layout.astro
import '../styles/global.css'; //   注 转 Tailwind  转专!

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="he" dir="rtl">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/stories/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans min-h-screen flex flex-col">
		
        <header class="bg-indigo-600 text-white shadow-md p-4 sticky top-0 z-50">
            <div class="container mx-auto flex justify-between items-center max-w-5xl">
                <a href="/stories" class="text-xl font-bold hover:text-indigo-100 no-underline text-white">
                     住驻专转 住驻专
                </a>
                </div>
        </header>

        <main class="container mx-auto max-w-5xl p-4 flex-grow">
			<slot />
		</main>

        <footer class="bg-gray-200 text-center p-4 mt-8 text-sm text-gray-600">
             爪注转 Astro & Svelte
        </footer>

	</body>
</html>